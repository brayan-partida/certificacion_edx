<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:key="preferencias_principal">
    <PreferenceCategory android:title="primera categoria">

        <CheckBoxPreference
            android:key="notificaciones"
            android:summary="esto es por si encuenta lugares sercanos"
            android:title="notificaciones">

        </CheckBoxPreference>


        <EditTextPreference
            android:defaultValue="12"
            android:inputType="number"
            android:key="cantidad"
            android:summary="cantidad de lugares sercas a mostrar"
            android:title="cantidad">

        </EditTextPreference>

        <ListPreference
            android:key="orden"
            android:title="ordenacion"
            android:summary="como se ordenara lo siguintes elementos"
            android:entries="@array/tiposOrden"
            android:entryValues="@array/tiposOrdenValores"
            android:defaultValue="1">


        </ListPreference>

    </PreferenceCategory>


    <PreferenceCategory
        android:key="extra"
        android:title="aqui va algo extra ">
        <EditTextPreference
            android:key="txt2"
            android:summary="hola como estas"
            android:title="hola">

        </EditTextPreference>

    </PreferenceCategory>

</PreferenceScreen>

